                   template="Kangaroorewards_Core::popup.phtml">
		<arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="kangarooCustomer" xsi:type="array">
                                <item name="component" xsi:type="string">Kangaroorewards_Core/js/view/kangaroo-customer</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
	    </block>
	</referenceBlock>
    </body>

</page>

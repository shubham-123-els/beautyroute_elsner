<script>
    require(['jquery'], function (jQuery) {
        jQuery('[data-ui-id="content-schedule-block2-disconnect-button"]').click(function(){
            var url = '<?= $block->getDisconnectUrl(); ?>';
            jQuery.ajax({
                type: "POST",
                url: url,
                data: {form_key: FORM_KEY},
                showLoader: true,
                success: function(){
                    location.reload();
                }
            });
        });
    });
</script>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="search_engine_optimisation">
        <field name="mp_meta_data_preview" formElement="input" sortOrder="0">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="component" xsi:type="string">Mageplaza_SeoAnalysis/js/view/extend-element-abstract</item>
                    <item name="elementTmpl" xsi:type="string">Mageplaza_SeoAnalysis/form/element/field-meta-data-preview</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Data Preview</label>
                <dataScope>mp_meta_data_preview</dataScope>
            </settings>
        </field>
        <field name="identifier" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="component" xsi:type="string">Mageplaza_SeoAnalysis/js/view/extend-element-abstract</item>
                    <item name="elementTmpl" xsi:type="string">Mageplaza_SeoAnalysis/form/element/input</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">URL Key</label>
                <dataScope>identifier</dataScope>
            </settings>
        </field>
        <field name="meta_title" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="component" xsi:type="string">Mageplaza_SeoAnalysis/js/view/extend-import-handler</item>
                    <item name="elementTmpl" xsi:type="string">Mageplaza_SeoAnalysis/form/element/field-progress</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Title</label>
                <dataScope>meta_title</dataScope>
            </settings>
        </field>
        <field name="meta_description" formElement="textarea">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="component" xsi:type="string">Mageplaza_SeoAnalysis/js/view/extend-import-handler</item>
                    <item name="elementTmpl" xsi:type="string">Mageplaza_SeoAnalysis/form/element/field-progress</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Meta Description</label>
                <dataScope>meta_description</dataScope>
            </settings>
        </field>
        <field name="mp_main_keyword" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="component" xsi:type="string">Mageplaza_SeoAnalysis/js/view/extend-element-abstract</item>
                    <item name="elementTmpl" xsi:type="string">Mageplaza_SeoAnalysis/form/element/input</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Focus Keyword</label>
                <dataScope>mp_main_keyword</dataScope>
            </settings>
        </field>
        <field name="mp_seo_insights" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="component" xsi:type="string">Mageplaza_SeoAnalysis/js/view/extend-element-abstract</item>
                    <item name="elementTmpl" xsi:type="string">Mageplaza_SeoAnalysis/form/element/field-seo-insights</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">SEO insights</label>
                <dataScope>mp_seo_insights</dataScope>
            </settings>
        </field>
    </fieldset>
</form>

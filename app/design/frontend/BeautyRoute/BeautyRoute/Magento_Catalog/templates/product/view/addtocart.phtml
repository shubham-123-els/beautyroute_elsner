<script>
function changeQty(increase) {
    var elementQty = document.getElementsByName("qty")[0];
    var qty = parseInt(elementQty.value);
    if (!isNaN(qty)) {
        qty = increase ? qty + 1 : (qty > 1 ? qty - 1 : 1);
        elementQty.value = qty;
    }
}
</script>